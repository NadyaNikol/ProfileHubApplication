<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_marginStart="@dimen/margin_start"
    android:layout_marginEnd="@dimen/margin_end"
    android:layout_marginTop="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/colorOutlineOnDark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivContact"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/iv_photo_profile"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/person_icon"
            app:shapeAppearanceOverlay="@style/CircleImageView"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_two_text_size"
            android:textColor="@color/colorOnSecondary"
            tools:text="Ava Smith"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/ivContact"
            app:layout_constraintTop_toTopOf="@id/ivContact"
            app:layout_constraintBottom_toTopOf="@id/tvCareerContact"
            app:layout_constraintVertical_chainStyle="packed"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/OpenSansTextRegular"
            android:id="@+id/tvCareerContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Photograph"
            android:textSize="@dimen/header_four_text_size"
            android:textColor="@color/colorCareerText"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/ivContact"
            app:layout_constraintTop_toBottomOf="@id/tvNameContact"
            app:layout_constraintBottom_toBottomOf="@id/ivContact"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imgBtnArrowBackIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/iv_arrow_back_icon"
            android:src="@drawable/delete_icon"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>